#cloud-config
passwd:
  users:
  - name: $K8S_provisionerUser
    groups: [ sudo, docker ]
$SSH_AUTHORIZED_KEYS
  - name: $K8S_SU_USER
    groups: [ sudo, docker ]
$SSH_AUTHORIZED_KEYS

storage:
  files:
  - path: /etc/hostname
    filesystem: "root"
    mode: 0644
    contents:
      inline: $K8S_node

networkd:
  units:
  - name: 10-ens3.network
    contents: |
      [Match]
      MACAddress=$K8S_mac2

      [Network]
      Address=$K8S_ip2
  - name: 11-ens3.network
    contents: |
      [Match]
      MACAddress=$K8S_mac3

      [Network]
      Address=$K8S_ip3
  - name: 20-dhcp.network
    contents: |
      [Match]
      name=e*

      [Network]
      DHCP=yes
